      "availability": ".availability, .stock-status, span:contains('In Stock')",
      "isbn": ".isbn, span:contains('ISBN'), [id^='book-']",
      "author": "span:contains('Charles'), .author"
    },
    "structured_data": {
      "type": "Product",
      "category": "Book",
      "brand": "Charles E. MacKay",
      "currency": "GBP",
      "condition": "NewCondition",
      "availability": "InStock",
      "merchant": {
        "name": "Charles MacKay Books",
        "location": "Glasgow, Scotland"
      }
    }
  },
  "feed_urls": [
    "https://charlesmackaybooks.com/products.xml",
    "https://charlesmackaybooks.com/merchant-feed.txt"
  ]
}


